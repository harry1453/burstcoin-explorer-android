<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:paddingTop="@dimen/margin_vertical"
        android:paddingBottom="@dimen/margin_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="@string/address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/weight_left"/>

            <TextView
                android:id="@+id/view_account_details_address_value"
                android:text="@string/loading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/weight_right"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="@string/public_key"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/weight_left"/>

            <TextView
                android:id="@+id/view_account_details_public_key_value"
                android:text="@string/loading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/weight_right"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="@string/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/weight_left"/>

            <TextView
                android:id="@+id/view_account_details_name_value"
                android:text="@string/loading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/weight_right"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="@string/description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/weight_left"/>

            <TextView
                android:id="@+id/view_account_details_description_value"
                android:text="@string/loading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/weight_right"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="@string/balance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/weight_left"/>

            <TextView
                android:id="@+id/view_account_details_balance_value"
                android:text="@string/loading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/weight_right"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="@string/forged_balance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/weight_left"/>

            <TextView
                android:id="@+id/view_account_details_forged_balance_value"
                android:text="@string/loading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/weight_right"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="@string/reward_recipient"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/weight_left"/>

            <TextView
                android:id="@+id/view_account_details_reward_recipient_value"
                android:text="@string/loading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/weight_right"/>

        </LinearLayout>

        <Button
            android:id="@+id/view_account_details_view_transactions"
            android:text="@string/view_transactions"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/view_account_details_save_account"
            android:text="@string/loading"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_vertical"
            android:layout_marginBottom="@dimen/margin_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>